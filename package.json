{
  "name": "api-biblioteca-virtual-cead",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate:up": "node-pg-migrate up -m ./migrations -c ./migrate.config.cjs --envPath .env -d DATABASE_URL_BIBLIOTECA --single-transaction=false",
    "migrate:down": "node-pg-migrate down -m ./migrations -c ./migrate.config.cjs --envPath .env -d DATABASE_URL_BIBLIOTECA --single-transaction=false",
    "seed:up": "node-pg-migrate up -m ./seeders -c ./migrate.config.cjs --envPath .env -d DATABASE_URL_BIBLIOTECA",
    "seed:down": "node-pg-migrate down -m ./seeders -c ./migrate.config.cjs --envPath .env -d DATABASE_URL_BIBLIOTECA"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.1",
    "sharp": "^0.33.5",
    "uuid": "^10.0.0",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "node-pg-migrate": "^7.9.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
